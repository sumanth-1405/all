public class Occurences {
	static Scanner sc = new Scanner(System.in);

	public static void main(String[] args) {
		String KeyS = sc.nextLine();
		//char[] ch = input.toCharArray();
		String key = sc.nextLine();
		int count = count(KeyS,key,0);
		
		sc.close();
	}

